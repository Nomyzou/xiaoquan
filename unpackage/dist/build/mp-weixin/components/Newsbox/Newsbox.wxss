.newsbox{padding:20rpx;background-color:#fff;border-radius:12rpx;margin-bottom:20rpx;box-shadow:0 2rpx 10rpx rgba(0,0,0,.05)}.newsbox .header{display:flex;align-items:center;margin-bottom:16rpx}.newsbox .header .rectangle{width:50rpx;height:40rpx;border-radius:10rpx;display:flex;justify-content:center;align-items:center;margin-right:20rpx}.newsbox .header .rectangle .seq-num{color:#fff;font-size:24rpx;font-weight:700}.newsbox .header .rectangle.dz{background:linear-gradient(135deg,#ffeb3b,#ffc107)}.newsbox .header .rectangle.xz{background:linear-gradient(135deg,#00ab5b,#0eab52)}.newsbox .header .rectangle.tz{background:linear-gradient(135deg,#0097ff,#24bbfc)}.newsbox .header .channel{font-size:28rpx;font-weight:700;color:#333}.newsbox .content{display:flex;justify-content:space-between;align-items:flex-start;gap:20rpx}.newsbox .content .text{flex:1;min-width:0}.newsbox .content .text .content-text{display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:3;overflow:hidden;text-overflow:ellipsis;font-size:26rpx;color:#666;line-height:1.5}.newsbox .content .pic{width:230rpx;height:160rpx;border-radius:8rpx;overflow:hidden;flex-shrink:0}.newsbox .content .pic .news-image{width:100%;height:100%;object-fit:cover}