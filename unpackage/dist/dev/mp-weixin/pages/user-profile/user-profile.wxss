.recently-viewed .title {
  padding: 20rpx;
}
.recently-viewed .newsbox {
  padding: 0 10rpx;
}
.user-box {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  height: 40vh;
  /* 使容器充满视口高度 */
  background-color: #FFFFFE;
  /* 米白色背景 */
  background-image: radial-gradient(circle, rgba(0, 0, 0, 0.05) 1px, rgba(0, 0, 0, 0) 1px);
  background-size: 1px 1px;
  /* 控制颗粒的密度 */
}
.user-box .tabs {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}
.user-box .tabs .box {
  padding: 0 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-box .tabs .box .number {
  font-size: 2em;
}
.user-box .tabs .box .text {
  font-weight: 100;
}
.user-box .user-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.user-box .user-info image {
  width: 10vh;
  /* 设置图片的宽度 */
  height: 10vh;
  /* 设置图片的高度 */
  border-radius: 50%;
  /* 将边框半径设为宽度的一半，形成圆形 */
}
