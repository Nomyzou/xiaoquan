.dz-detail {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4e8eb 100%);
  padding-bottom: 140rpx;
}
.dz-detail .header {
  background: linear-gradient(120deg, #ffffff 0%, #f8f9fa 100%);
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}
.dz-detail .header .title-container {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.dz-detail .header .title-container .title {
  font-size: 40rpx;
  font-weight: bold;
  background: linear-gradient(120deg, #2c3e50 0%, #3498db 100%);
  -webkit-background-clip: text;
  color: transparent;
  flex: 1;
  line-height: 1.4;
}
.dz-detail .header .title-container .count {
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  text-align: center;
  margin-left: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(106, 17, 203, 0.2);
}
.dz-detail .header .title-container .count .count-text {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
  display: block;
}
.dz-detail .header .title-container .count .count-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 4rpx;
  display: block;
}
.dz-detail .content {
  background: linear-gradient(120deg, #ffffff 0%, #f8f9fa 100%);
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}
.dz-detail .content .info-section {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}
.dz-detail .content .info-section .info-item {
  width: 50%;
  margin-bottom: 20rpx;
}
.dz-detail .content .info-section .info-item .label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}
.dz-detail .content .info-section .info-item .value {
  font-size: 28rpx;
  color: #333;
}
.dz-detail .content .info-section .info-item .value.type-tag {
  display: inline-block;
  background: linear-gradient(120deg, #00c6fb 0%, #005bea 100%);
  color: #ffffff;
  padding: 6rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 198, 251, 0.2);
}
.dz-detail .content .description .label {
  font-size: 28rpx;
  background: linear-gradient(120deg, #2c3e50 0%, #3498db 100%);
  -webkit-background-clip: text;
  color: transparent;
  font-weight: bold;
  margin-bottom: 16rpx;
  display: block;
}
.dz-detail .content .description .value {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
.dz-detail .image-section {
  background: linear-gradient(120deg, #ffffff 0%, #f8f9fa 100%);
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}
.dz-detail .image-section .section-title {
  font-size: 28rpx;
  background: linear-gradient(120deg, #2c3e50 0%, #3498db 100%);
  -webkit-background-clip: text;
  color: transparent;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}
.dz-detail .image-section .image-scroll {
  width: 100%;
  white-space: nowrap;
}
.dz-detail .image-section .image-scroll .image-list {
  display: inline-flex;
  padding: 10rpx 0;
}
.dz-detail .image-section .image-scroll .image-list .gallery-image {
  width: 240rpx;
  height: 240rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  transition: -webkit-transform 0.3s ease;
  transition: transform 0.3s ease;
  transition: transform 0.3s ease, -webkit-transform 0.3s ease;
}
.dz-detail .image-section .image-scroll .image-list .gallery-image:active {
  -webkit-transform: scale(0.98);
          transform: scale(0.98);
}
.dz-detail .image-section .image-scroll .image-list .gallery-image:last-child {
  margin-right: 0;
}
.dz-detail .float-button {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: linear-gradient(120deg, #ffffff 0%, #f8f9fa 100%);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  justify-content: center;
}
.dz-detail .float-button .button-text {
  font-size: 32rpx;
  font-weight: bold;
}
