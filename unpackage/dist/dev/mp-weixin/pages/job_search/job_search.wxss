.jobSeekerDetail {
  padding: 20rpx 30rpx;
}
.jobSeekerDetail .header .intention .position {
  font-size: 44rpx;
  font-weight: 700;
  color: #333;
}
.jobSeekerDetail .header .intention .tags {
  margin-top: 20rpx;
  display: flex;
  gap: 20rpx;
}
.jobSeekerDetail .sectionTitle {
  display: flex;
  align-items: center;
  margin: 30rpx 0;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}
.jobSeekerDetail .sectionTitle text {
  margin-left: 15rpx;
}
.jobSeekerDetail .infoGrid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}
.jobSeekerDetail .infoGrid .infoItem {
  display: flex;
}
.jobSeekerDetail .infoGrid .infoItem .label {
  color: #666;
  margin-right: 15rpx;
}
.jobSeekerDetail .infoGrid .infoItem .value {
  color: #333;
  font-weight: 500;
}
.jobSeekerDetail .skillList {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin: 20rpx 0;
}
.jobSeekerDetail .awards {
  margin-top: 30rpx;
}
.jobSeekerDetail .awards .awardItem {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
  color: #666;
}
.jobSeekerDetail .awards .awardItem text {
  margin-left: 15rpx;
}
.jobSeekerDetail .timelineItem .time {
  color: #999;
  font-size: 28rpx;
}
.jobSeekerDetail .timelineItem .company {
  display: block;
  margin: 10rpx 0;
  font-weight: 600;
  color: #333;
}
.jobSeekerDetail .timelineItem .desc {
  color: #666;
  line-height: 1.6;
}
.jobSeekerDetail .fixedButton {
  position: fixed;
  bottom: 60rpx;
  left: 5%;
  right: 5%;
  width: 90%;
}
